<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

  <!-- ========= Console pattern ========= -->
  <property name="APP_PATTERN" value="%d{ISO8601} %-5level [%thread] %logger - %msg%n"/>

  <!-- ===== Console (goes to DO Logs) ===== -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${APP_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- ===== Application rolling file (optional) ===== -->
  <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/application.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <maxHistory>14</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>${APP_PATTERN}</pattern>
    </encoder>
  </appender>

  <!-- ===== Payment audit rolling file (NO external encoder) ===== -->
  <!-- Our controller already writes JSON strings for audit; so just emit %msg -->
  <appender name="PAYMENT_AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/payment-audit.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>logs/payment-audit.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>
    <encoder>
      <!-- write exactly the message (which is JSON from the controller) -->
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <!-- ===== payment.audit logger (mirror to console for DO + write to file) ===== -->
  <logger name="payment.audit" level="INFO" additivity="false">
    <appender-ref ref="PAYMENT_AUDIT_FILE"/>
    <appender-ref ref="STDOUT"/>
  </logger>

  <!-- ===== Root logger ===== -->
  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="APP_FILE"/>
  </root>
</configuration>

